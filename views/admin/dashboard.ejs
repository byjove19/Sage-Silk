        // Export Functions
        function exportData(type) {
            let data, filename;
            
            switch(type) {
                case 'products':
                    data = products;
                    filename = 'products.json';
                    break;
                case 'orders':
                    data = orders;
                    filename = 'orders.json';
                    break;
                case 'customers':
                    data = customers;
                    filename = 'customers.json';
                    break;
                default:
                    return;
            }
            
            const dataStr = JSON.stringify(data, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = filename;
            link.click();
            URL.revokeObjectURL(url);
            
            showNotification(`${type} data exported successfully!`, 'success');
        }

        // Real-time Updates (simulated)
        function simulateRealTimeUpdates() {
            setInterval(() => {
                // Randomly update order statuses
                if (Math.random() > 0.7) {
                    const randomOrder = orders[Math.floor(Math.random() * orders.length)];
                    const statuses = ['pending', 'processing', 'shipped', 'completed'];
                    randomOrder.status = statuses[Math.floor(Math.random() * statuses.length)];
                    
                    populateOrdersTable();
                    populateAllOrdersTable();
                }
                
                // Update statistics (simulated)
                if (Math.random() > 0.8) {
                    const statNumbers = document.querySelectorAll('.stat-number');
                    statNumbers.forEach(stat => {
                        if (stat.textContent.includes('₦')) {
                            const currentValue = parseFloat(stat.textContent.replace(/[₦,M]/g, ''));
                            const newValue = currentValue + (Math.random() * 0.1 - 0.05);
                            stat.textContent = `₦${newValue.toFixed(1)}M`;
                        }
                    });
                }
            }, 10000); // Update every 10 seconds
        }

