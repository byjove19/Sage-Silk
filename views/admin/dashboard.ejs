        // Keyboard Shortcuts
        document.addEventListener('keydown', (e) => {
            // Alt + M for menu toggle
            if (e.altKey && e.key === 'm') {
                e.preventDefault();
                menuToggle.click();
            }
            
            // Alt + N for new product
            if (e.altKey && e.key === 'n') {
                e.preventDefault();
                if (document.getElementById('products-section').style.display !== 'none') {
                    document.querySelector('[data-bs-target="#addProductModal"]').click();
                }
            }
        });

        // Auto-save form data (prevent data loss)
        function autoSaveFormData() {
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                const inputs = form.querySelectorAll('input, select, textarea');
                inputs.forEach(input => {
                    input.addEventListener('input', () => {
                        const formId = form.id;
                        const inputName = input.name;
                        const value = input.value;
                        
                        if (formId && inputName) {
                            const key = `${formId}_${inputName}`;
                            // Note: In a real app, you'd use localStorage here
                            // For this demo, we'll just store in a variable
                            window.tempFormData = window.tempFormData || {};
                            window.tempFormData[key] = value;
                        }
                    });
                });
            });
        }

        // Initialize auto-save
        autoSaveFormData();

        // Performance Monitoring
        function trackPerformance() {
            if ('performance' in window) {
                window.addEventListener('load', () => {
                    const loadTime = performance.timing.loadEventEnd - performance.timing.navigationStart;
                    console.log(`Dashboard loaded in ${loadTime}ms`);
                });
            }
        }

        trackPerformance();
