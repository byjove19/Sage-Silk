<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products - Sage & Silk</title>
    <style>
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
        }
        .product-card {
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 5px;
        }
        .product-card img {
            width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <h1>All Products</h1>
    
    <div class="products-grid">
        <% products.forEach(product => { %>
            <div class="product-card">
                <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                <h3><%= product.name %></h3>
                <p>$<%= product.price %></p>
                <a href="/product/slug/<%= product.slug %>">View Details</a>
            </div>
        <% }); %>
    </div>
</body>
</html>