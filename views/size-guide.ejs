            line-height: 1.6;
            color: #5a6249;
        }

        .floating-elements {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
            z-index: 1;
        }

        .fabric-piece {
            position: absolute;
            opacity: 0.4;
            animation: float 8s ease-in-out infinite;
        }

        .fabric-piece:nth-child(1) {
            top: 15%;
            left: 5%;
            width: 60px;
            height: 40px;
            background: linear-gradient(45deg, #9ca986, #a8b894);
            border-radius: 20px;
            animation-delay: 0s;
            transform: rotate(15deg);
        }

        .fabric-piece:nth-child(2) {
            top: 30%;
            right: 10%;
            width: 80px;
            height: 30px;
            background: linear-gradient(45deg, #d4c5b0, #c7b299);
            border-radius: 15px;
            animation-delay: 3s;
            transform: rotate(-10deg);
        }

        .fabric-piece:nth-child(3) {
            top: 60%;
            left: 15%;
            width: 50px;
            height: 50px;
            background: linear-gradient(45deg, #8b9474, #96a082);
            border-radius: 25px;
            animation-delay: 6s;
            transform: rotate(25deg);
        }

        .fabric-piece:nth-child(4) {
            bottom: 20%;
            right: 20%;
            width: 70px;
            height: 35px;
            background: linear-gradient(45deg, #c9ba9b, #b8a988);
            border-radius: 18px;
            animation-delay: 2s;
            transform: rotate(-20deg);
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(var(--rotation, 0deg)); }
            50% { transform: translateY(-25px) rotate(calc(var(--rotation, 0deg) + 8deg)); }
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            position: relative;
            z-index: 2;
        }

        .header {
            text-align: center;
            margin-bottom: 3rem;
