    <script>
        // Create floating particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 25;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 15 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Initialize particles when page loads
        document.addEventListener('DOMContentLoaded', createParticles);

        // Enhanced fabric piece animations
        document.querySelectorAll('.fabric-piece').forEach((piece, index) => {
            const rotations = [15, -10, 25, -20, 45];
            piece.style.setProperty('--rotation', rotations[index] + 'deg');
            
            piece.addEventListener('mouseenter', () => {
                piece.style.transform = `scale(1.4) rotate(${rotations[index] + 20}deg)`;
                piece.style.opacity = '0.6';
                piece.style.filter = 'blur(0px)';
            });
            
            piece.addEventListener('mouseleave', () => {
                piece.style.transform = `scale(1) rotate(${rotations[index]}deg)`;
                piece.style.opacity = '0.3';
                piece.style.filter = 'blur(1px)';
            });
        });

        // Enhanced form functionality
        const form = document.getElementById('contactForm');
        const submitBtn = form.querySelector('.submit-btn');
        const originalBtnText = submitBtn.innerHTML;

        form.addEventListener('submit', function(e) {
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
            submitBtn.disabled = true;
            submitBtn.style.opacity = '0.7';
        });

        // Auto-hide messages with fade effect
        const messages = document.querySelectorAll('.success-message, .error-message');
        messages.forEach(message => {
            if (message.style.display === 'block') {
                setTimeout(() => {
                    message.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    message.style.opacity = '0';
                    message.style.transform = 'translateY(-20px)';
                    setTimeout(() => {
                        message.style.display = 'none';
                    }, 500);
                }, 6000);
            }
        });

        // Enhanced input animations
        document.querySelectorAll('.form-input').forEach(input => {
            const group = input.parentElement;
            const label = group.querySelector('.form-label');
            
            input.addEventListener('focus', function() {
                group.classList.add('focused');
                label.style.color = '#9ca986';
                label.style.transform = 'translateY(-2px)';
            });
            
            input.addEventListener('blur', function() {
                group.classList.remove('focused');
                label.style.color = '#6b7460';
                label.style.transform = 'translateY(0)';
            });

            // Real-time validation feedback
            input.addEventListener('input', function() {
                if (this.checkValidity()) {
                    this.style.borderColor = 'rgba(156, 169, 134, 0.5)';
                    this.style.boxShadow = '0 0 0 2px rgba(156, 169, 134, 0.1)';
                } else if (this.value.length > 0) {
                    this.style.borderColor = 'rgba(212, 165, 116, 0.5)';
                    this.style.boxShadow = '0 0 0 2px rgba(212, 165, 116, 0.1)';
                } else {
                    this.style.borderColor = 'rgba(156, 169, 134, 0.25)';
                    this.style.boxShadow = 'none';
                }
            });
        });

        // Intersection Observer for scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animationPlayState = 'running';
                }
            });
        }, observerOptions);

        // Observe all animated elements
        document.querySelectorAll('.contact-info-card, .map-section').forEach(el => {
            observer.observe(el);
        });

        // Enhanced hover effects for contact cards
        document.querySelectorAll('.contact-info-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px) scale(1.02)';
                const icon = this.querySelector('.info-icon');
                icon.style.transform = 'scale(1.15) rotate(10deg)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
                const icon = this.querySelector('.info-icon');
                icon.style.transform = 'scale(1) rotate(0deg)';
            });
        });

        // Social links enhanced animations
        document.querySelectorAll('.social-link').forEach(link => {
            link.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-6px) scale(1.15) rotate(5deg)';
            });

            link.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1) rotate(0deg)';
            });
        });

        // Form validation enhancement
        const validateForm = () => {
            const requiredFields = form.querySelectorAll('[required]');
            let isValid = true;

            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    isValid = false;
                    field.style.borderColor = 'rgba(212, 165, 116, 0.7)';
                    field.style.boxShadow = '0 0 0 3px rgba(212, 165, 116, 0.2)';
                } else {
                    field.style.borderColor = 'rgba(156, 169, 134, 0.5)';
                    field.style.boxShadow = '0 0 0 2px rgba(156, 169, 134, 0.1)';
                }
            });

            return isValid;
        };

        // Add smooth transitions for all interactive elements
        const style = document.createElement('style');
        style.textContent = `
            .form-label {
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            }
            
            .hours-item {
                border-radius: 0;
                transition: all 0.3s ease;
            }
            
            .info-icon {
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            }
        `;
        document.head.appendChild(style);
    </script>
